
{{> header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="{{help_center.url}}" class="hover:text-blue-600">Inicio</a></li>
        <li>></li>
        <li><a href="{{community.url}}" class="hover:text-blue-600">Comunidad</a></li>
        <li>></li>
        <li class="text-gray-800 font-medium">Perfil de Usuario</li>
      </ol>
    </nav>

    <!-- User Profile Header -->
    <div class="bg-white rounded-lg shadow-md mb-8">
      <div class="p-8">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
          
          <!-- User Avatar -->
          <div class="flex-shrink-0">
            {{#if user.avatar_url}}
            <img src="{{user.avatar_url}}" alt="{{user.name}}" class="w-24 h-24 rounded-full border-4 border-blue-100">
            {{else}}
            <div class="w-24 h-24 rounded-full bg-blue-600 flex items-center justify-center text-white text-2xl font-bold">
              {{user.initials}}
            </div>
            {{/if}}
          </div>
          
          <!-- User Info -->
          <div class="flex-grow text-center md:text-left">
            <h1 class="text-3xl font-bold mb-2">{{user.name}}</h1>
            
            {{#if user.title}}
            <p class="text-lg text-gray-600 mb-3">{{user.title}}</p>
            {{/if}}
            
            <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm text-gray-500 mb-4">
              <span class="flex items-center gap-1">
                📅 Miembro desde {{user.created_at}}
              </span>
              
              {{#if user.location}}
              <span class="flex items-center gap-1">
                📍 {{user.location}}
              </span>
              {{/if}}
              
              {{#if user.last_seen_at}}
              <span class="flex items-center gap-1">
                🕒 Visto por última vez {{user.last_seen_at}}
              </span>
              {{/if}}
            </div>
            
            {{#if user.bio}}
            <p class="text-gray-700 max-w-2xl">{{user.bio}}</p>
            {{/if}}
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-col gap-2">
            {{#if current_user.can_edit_profile}}
            <a href="/community/users/{{user.id}}/edit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center">
              Editar Perfil
            </a>
            {{/if}}
            
            {{#unless current_user.is_self}}
            <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors">
              Enviar Mensaje
            </button>
            {{/unless}}
          </div>
        </div>
      </div>
    </div>

    <!-- User Statistics -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-blue-600 mb-1">{{user.posts_count}}</div>
        <div class="text-sm text-gray-600">Publicaciones</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-green-600 mb-1">{{user.comments_count}}</div>
        <div class="text-sm text-gray-600">Respuestas</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-purple-600 mb-1">{{user.votes_received}}</div>
        <div class="text-sm text-gray-600">Votos Recibidos</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-orange-600 mb-1">{{user.reputation}}</div>
        <div class="text-sm text-gray-600">Reputación</div>
      </div>
    </div>

    <!-- User Badges/Achievements -->
    {{#if user.badges}}
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-semibold mb-4">🏆 Logros y Reconocimientos</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {{#each user.badges}}
        <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
          <div class="text-2xl">{{icon}}</div>
          <div>
            <div class="font-medium text-sm">{{name}}</div>
            <div class="text-xs text-gray-600">{{description}}</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}

    <!-- Activity Tabs -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="border-b border-gray-200">
        <nav class="flex">
          <a href="?tab=posts" class="py-4 px-6 border-b-2 {{#is tab 'posts'}}border-blue-500 text-blue-600{{else}}border-transparent text-gray-500 hover:text-gray-700{{/is}} font-medium">
            Publicaciones Recientes
          </a>
          <a href="?tab=comments" class="py-4 px-6 border-b-2 {{#is tab 'comments'}}border-blue-500 text-blue-600{{else}}border-transparent text-gray-500 hover:text-gray-700{{/is}} font-medium">
            Respuestas
          </a>
          <a href="?tab=activity" class="py-4 px-6 border-b-2 {{#is tab 'activity'}}border-blue-500 text-blue-600{{else}}border-transparent text-gray-500 hover:text-gray-700{{/is}} font-medium">
            Actividad
          </a>
        </nav>
      </div>
      
      <div class="p-6">
        <!-- Recent Posts Tab -->
        {{#is tab 'posts'}}
        {{#if recent_posts}}
        <div class="space-y-4">
          {{#each recent_posts}}
          <article class="border-b border-gray-100 pb-4 last:border-b-0">
            <h3 class="font-semibold mb-2">
              <a href="{{url}}" class="text-blue-600 hover:text-blue-800">{{title}}</a>
            </h3>
            <p class="text-gray-600 text-sm mb-2 line-clamp-2">{{excerpt}}</p>
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>en <a href="{{topic.url}}" class="text-blue-600">{{topic.name}}</a></span>
              <span>{{created_at}} • 👍 {{vote_sum}} • 💬 {{comment_count}}</span>
            </div>
          </article>
          {{/each}}
        </div>
        {{else}}
        <div class="text-center py-8 text-gray-500">
          <div class="text-4xl mb-2">📝</div>
          <p>Este usuario aún no ha creado publicaciones.</p>
        </div>
        {{/if}}
        {{/is}}

        <!-- Recent Comments Tab -->
        {{#is tab 'comments'}}
        {{#if recent_comments}}
        <div class="space-y-4">
          {{#each recent_comments}}
          <article class="border-b border-gray-100 pb-4 last:border-b-0">
            <div class="text-sm text-gray-600 mb-2">
              Respuesta en: <a href="{{post.url}}" class="text-blue-600 hover:text-blue-800">{{post.title}}</a>
            </div>
            <div class="text-gray-700 mb-2">{{body}}</div>
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>{{created_at}}</span>
              <span>👍 {{vote_sum}}</span>
            </div>
          </article>
          {{/each}}
        </div>
        {{else}}
        <div class="text-center py-8 text-gray-500">
          <div class="text-4xl mb-2">💬</div>
          <p>Este usuario aún no ha realizado respuestas.</p>
        </div>
        {{/if}}
        {{/is}}

        <!-- Activity Tab -->
        {{#is tab 'activity'}}
        {{#if activity_feed}}
        <div class="space-y-4">
          {{#each activity_feed}}
          <div class="flex items-start gap-3">
            <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-sm">
              {{#is type 'post'}}📄{{/is}}
              {{#is type 'comment'}}💬{{/is}}
              {{#is type 'vote'}}👍{{/is}}
              {{#is type 'badge'}}🏆{{/is}}
            </div>
            <div class="flex-grow">
              <p class="text-sm">
                {{#is type 'post'}}Creó la publicación <a href="{{item.url}}" class="text-blue-600">{{item.title}}</a>{{/is}}
                {{#is type 'comment'}}Respondió en <a href="{{item.post.url}}" class="text-blue-600">{{item.post.title}}</a>{{/is}}
                {{#is type 'vote'}}Votó por <a href="{{item.url}}" class="text-blue-600">{{item.title}}</a>{{/is}}
                {{#is type 'badge'}}Obtuvo el logro "{{item.name}}"{{/is}}
              </p>
              <p class="text-xs text-gray-500">{{created_at}}</p>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="text-center py-8 text-gray-500">
          <div class="text-4xl mb-2">📊</div>
          <p>No hay actividad reciente para mostrar.</p>
        </div>
        {{/if}}
        {{/is}}
      </div>
    </div>

    <!-- Contact Information -->
    {{#if user.contact_info}}
    <div class="bg-white rounded-lg shadow-md p-6 mt-8">
      <h3 class="text-lg font-semibold mb-4">📞 Información de Contacto</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {{#if user.email}}
        <div class="flex items-center gap-2">
          <span class="text-gray-600">Email:</span>
          <a href="mailto:{{user.email}}" class="text-blue-600 hover:text-blue-800">{{user.email}}</a>
        </div>
        {{/if}}
        
        {{#if user.phone}}
        <div class="flex items-center gap-2">
          <span class="text-gray-600">Teléfono:</span>
          <span>{{user.phone}}</span>
        </div>
        {{/if}}
        
        {{#if user.website}}
        <div class="flex items-center gap-2">
          <span class="text-gray-600">Sitio web:</span>
          <a href="{{user.website}}" target="_blank" class="text-blue-600 hover:text-blue-800">{{user.website}}</a>
        </div>
        {{/if}}
      </div>
    </div>
    {{/if}}

    <!-- Back to Community -->
    <div class="text-center mt-8 pt-8 border-t border-gray-200">
      <a href="{{community.url}}" class="text-blue-600 hover:text-blue-800 transition-colors">
        ← Volver a la Comunidad
      </a>
    </div>

  </div>
</main>

{{> footer}}
