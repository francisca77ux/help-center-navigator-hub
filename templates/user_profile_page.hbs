
{{> _header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="{{help_center.url}}" class="hover:text-blue-600">Inicio</a></li>
        <li>></li>
        <li><a href="/community" class="hover:text-blue-600">Comunidad</a></li>
        <li>></li>
        <li class="text-gray-800 font-medium">Perfil de Usuario</li>
      </ol>
    </nav>

    <!-- User Profile Header -->
    <div class="bg-white rounded-lg shadow-md p-8 mb-8">
      <div class="flex items-start gap-6">
        <!-- Avatar -->
        <div class="flex-shrink-0">
          {{#if user.avatar_url}}
          <img src="{{user.avatar_url}}" alt="{{user.name}}" class="w-24 h-24 rounded-full">
          {{else}}
          <div class="w-24 h-24 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold">
            {{#if user.name}}{{substring user.name 0 1}}{{else}}U{{/if}}
          </div>
          {{/if}}
        </div>
        
        <!-- User Info -->
        <div class="flex-1">
          <h1 class="text-3xl font-bold mb-2">{{user.name}}</h1>
          
          <div class="text-gray-600 space-y-1 mb-4">
            <div>Miembro desde: Enero 2024</div>
            <div>Última conexión: Hace 2 días</div>
          </div>
          
          <p class="text-gray-700 mb-4">
            Usuario activo de la comunidad ADT Chile.
          </p>
          
          <div class="flex gap-4">
            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
              Enviar Mensaje
            </button>
            <button class="border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors">
              Seguir Usuario
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- User Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-blue-600 mb-2">0</div>
        <div class="text-gray-600">Publicaciones</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-green-600 mb-2">0</div>
        <div class="text-gray-600">Respuestas</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-purple-600 mb-2">0</div>
        <div class="text-gray-600">Votos Recibidos</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-orange-600 mb-2">0</div>
        <div class="text-gray-600">Reputación</div>
      </div>
    </div>

    <!-- Activity Tabs -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="border-b border-gray-200">
        <nav class="flex space-x-8 px-6">
          <a href="#recent-posts" class="py-4 px-1 border-b-2 border-blue-500 text-blue-600 whitespace-nowrap">
            Publicaciones Recientes
          </a>
          <a href="#recent-comments" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap">
            Respuestas Recientes
          </a>
          <a href="#activity" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap">
            Actividad
          </a>
        </nav>
      </div>
      
      <div class="p-6">
        <!-- Recent Posts -->
        <div id="recent-posts">
          <div class="text-center py-8">
            <div class="text-4xl mb-4">📝</div>
            <h3 class="text-lg font-semibold mb-2">Sin publicaciones aún</h3>
            <p class="text-gray-600">Este usuario aún no ha creado ninguna publicación.</p>
          </div>
        </div>
        
        <!-- Recent Comments -->
        <div id="recent-comments" class="hidden">
          <div class="text-center py-8">
            <div class="text-4xl mb-4">💬</div>
            <h3 class="text-lg font-semibold mb-2">Sin respuestas aún</h3>
            <p class="text-gray-600">Este usuario aún no ha respondido a ninguna publicación.</p>
          </div>
        </div>
        
        <!-- Activity Feed -->
        <div id="activity" class="hidden">
          <div class="text-center py-8">
            <div class="text-4xl mb-4">📊</div>
            <h3 class="text-lg font-semibold mb-2">Sin actividad reciente</h3>
            <p class="text-gray-600">No hay actividad reciente para mostrar.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="bg-white rounded-lg shadow-md p-6 mt-8">
      <h3 class="text-lg font-semibold mb-4">Información de Contacto</h3>
      
      <div class="space-y-3 text-sm text-gray-600">
        <div class="flex items-center gap-3">
          <span class="w-5 h-5">✉️</span>
          <span>Email no disponible públicamente</span>
        </div>
        
        <div class="flex items-center gap-3">
          <span class="w-5 h-5">📞</span>
          <span>Teléfono no disponible públicamente</span>
        </div>
        
        <div class="flex items-center gap-3">
          <span class="w-5 h-5">🌐</span>
          <span>Sitio web no disponible</span>
        </div>
      </div>
    </div>

    <!-- Back to Community -->
    <div class="text-center mt-8">
      <a href="/community" class="text-blue-600 hover:text-blue-800 transition-colors">
        ← Volver a la Comunidad
      </a>
    </div>

  </div>
</main>

{{> _footer}}
