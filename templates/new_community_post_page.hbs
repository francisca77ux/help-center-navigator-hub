{{> document_head}}
{{> header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="{{help_center.url}}" class="hover:text-blue-600">Inicio</a></li>
        <li>></li>
        <li><a href="/community" class="hover:text-blue-600">Comunidad</a></li>
        <li>></li>
        <li class="text-gray-800 font-medium">Nueva Publicación</li>
      </ol>
    </nav>

    <!-- Back Link -->
    <div class="mb-8">
      <a href="/community" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-4">
        ← Volver a la Comunidad
      </a>
      
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-blue-600 text-white rounded-lg flex items-center justify-center">
          ✏️
        </div>
        <h1 class="text-4xl font-bold">Nueva Publicación</h1>
      </div>
    </div>

    <!-- Post Form -->
    <form class="bg-white rounded-lg shadow-md p-8 space-y-6">
      <!-- Title -->
      <div>
        <label for="post-title" class="block text-sm font-medium text-gray-700 mb-2">
          Título de la publicación *
        </label>
        <input 
          type="text" 
          id="post-title" 
          name="post[title]" 
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="Escribe un título descriptivo..."
          required
        >
      </div>

      <!-- Topic Selection -->
      <div>
        <label for="post-topic" class="block text-sm font-medium text-gray-700 mb-2">
          Tema
        </label>
        <select 
          id="post-topic" 
          name="post[topic_id]" 
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
          <option value="">Selecciona un tema</option>
          <option value="general">General</option>
          <option value="soporte">Soporte Técnico</option>
          <option value="instalacion">Instalación</option>
          <option value="app">App ADT</option>
        </select>
      </div>

      <!-- Content -->
      <div>
        <label for="post-content" class="block text-sm font-medium text-gray-700 mb-2">
          Contenido *
        </label>
        <textarea 
          id="post-content" 
          name="post[details]" 
          rows="12" 
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="Describe tu consulta o comparte tu experiencia..."
          required>
        </textarea>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-6 border-t">
        <div class="text-sm text-gray-500">
          * Campos obligatorios
        </div>
        
        <div class="flex gap-4">
          <a href="/community" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
            Cancelar
          </a>
          <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            Publicar
          </button>
        </div>
      </div>
    </form>

    <!-- Guidelines -->
    <div class="bg-blue-50 rounded-lg p-6 mt-8">
      <h3 class="font-semibold text-blue-900 mb-3">Consejos para una buena publicación</h3>
      <ul class="text-sm text-blue-800 space-y-1">
        <li>• Usa un título claro y descriptivo</li>
        <li>• Proporciona todos los detalles relevantes</li>
        <li>• Busca publicaciones similares antes de crear una nueva</li>
        <li>• Mantén un tono respetuoso y profesional</li>
        <li>• Agrega capturas de pantalla si es necesario</li>
      </ul>
    </div>

  </div>
</main>

{{> footer}}
