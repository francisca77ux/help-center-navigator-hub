{{> _document_head}}
{{> _header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-4xl font-bold">Mis Solicitudes</h1>
        <a href="/hc/es/requests/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
          Nueva Solicitud
        </a>
      </div>
      <p class="text-lg text-gray-600">
        Administra y consulta el estado de todas tus solicitudes de soporte.
      </p>
    </div>

    <!-- Requests List -->
    {{#if requests}}
    <div class="space-y-4">
      {{#each requests}}
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h3 class="text-xl font-semibold mb-2">
              <a href="{{url}}" class="hover:text-blue-600 transition-colors">{{subject}}</a>
            </h3>
            
            <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
              <span>Solicitud #{{id}}</span>
              <span>•</span>
              <span>{{created_at}}</span>
              {{#if updated_at}}
              <span>•</span>
              <span>Actualizada {{updated_at}}</span>
              {{/if}}
            </div>
            
            {{#if description}}
            <p class="text-gray-600 line-clamp-2">{{description}}</p>
            {{/if}}
          </div>
          
          <div class="flex flex-col items-end gap-2">
            <span class="px-3 py-1 rounded-full text-xs font-medium {{#compare status '==' 'solved'}}bg-green-100 text-green-800{{else}}{{#compare status '==' 'pending'}}bg-yellow-100 text-yellow-800{{else}}{{#compare status '==' 'open'}}bg-blue-100 text-blue-800{{else}}bg-gray-100 text-gray-800{{/compare}}{{/compare}}{{/compare}}{{/compare}}">
              {{#compare status '==' 'solved'}}Resuelto{{else}}{{#compare status '==' 'pending'}}Pendiente{{else}}{{#compare status '==' 'open'}}Abierto{{else}}{{status}}{{/compare}}{{/compare}}{{/compare}}
            </span>
            
            <span class="text-sm text-gray-500">
              💬 0 comentarios
            </span>
          </div>
        </div>
        
        <div class="flex items-center justify-between pt-4 border-t border-gray-100">
          <div class="text-sm text-gray-500">
            Sin asignar
          </div>
          
          <a href="{{url}}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
            Ver detalles →
          </a>
        </div>
      </div>
      {{/each}}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8">
      <nav class="flex items-center gap-2">
        <a href="?page=1" class="px-3 py-2 border border-gray-300 rounded-md hover:bg-gray-50">
          ← Anterior
        </a>
        
        <span class="px-3 py-2 bg-blue-600 text-white rounded-md">1</span>
        
        <a href="?page=2" class="px-3 py-2 border border-gray-300 rounded-md hover:bg-gray-50">
          Siguiente →
        </a>
      </nav>
    </div>
    {{else}}
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="text-6xl mb-4">📋</div>
      <h2 class="text-2xl font-bold mb-4">No tienes solicitudes</h2>
      <p class="text-gray-600 mb-8">
        Cuando tengas consultas o necesites ayuda, puedes crear una nueva solicitud.
      </p>
      
      <a href="/hc/es/requests/new" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors inline-block">
        Crear Primera Solicitud
      </a>
    </div>
    {{/if}}

  </div>
</main>

{{> _footer}}
