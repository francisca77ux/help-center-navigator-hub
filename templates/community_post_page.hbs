
{{> header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="{{help_center.url}}" class="hover:text-blue-600">Inicio</a></li>
        <li>></li>
        <li><a href="{{community.url}}" class="hover:text-blue-600">Comunidad</a></li>
        <li>></li>
        <li><a href="{{topic.url}}" class="hover:text-blue-600">{{topic.name}}</a></li>
        <li>></li>
        <li class="text-gray-800 font-medium">{{post.title}}</li>
      </ol>
    </nav>

    <!-- Back Link -->
    <div class="mb-8">
      <a href="{{topic.url}}" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-4">
        ← Volver a {{topic.name}}
      </a>
    </div>

    <!-- Post Content -->
    <article class="bg-white rounded-lg shadow-md">
      <!-- Post Header -->
      <header class="p-6 border-b">
        <div class="flex items-start justify-between mb-4">
          <div class="flex items-center gap-3">
            {{#if post.author.avatar_url}}
            <img src="{{post.author.avatar_url}}" alt="{{post.author.name}}" class="w-12 h-12 rounded-full">
            {{else}}
            <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center">
              <span class="text-gray-600 font-semibold text-lg">{{post.author.name.[0]}}</span>
            </div>
            {{/if}}
            <div>
              <h3 class="font-semibold text-lg">{{post.author.name}}</h3>
              <p class="text-sm text-gray-500">{{post.created_at}}</p>
            </div>
          </div>
          
          {{#if post.featured}}
          <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">Destacado</span>
          {{/if}}
        </div>
        
        <h1 class="text-3xl font-bold mb-4">{{post.title}}</h1>
        
        <div class="flex items-center gap-4 text-sm text-gray-500">
          <span>💬 {{post.comments_count}} respuestas</span>
          <span>👍 {{post.vote_sum}} votos</span>
          <span>👁️ {{post.views}} vistas</span>
          {{#if post.updated_at}}
          <span>Actualizado {{post.updated_at}}</span>
          {{/if}}
        </div>
      </header>
      
      <!-- Post Body -->
      <div class="p-6 prose prose-lg max-w-none">
        {{{post.details}}}
      </div>
    </article>

    <!-- Post Voting -->
    <div class="mt-8 text-center">
      <h3 class="text-lg font-semibold mb-4">¿Te resultó útil esta publicación?</h3>
      <div class="flex justify-center gap-4">
        <button class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
          👍 Útil
        </button>
        <button class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors">
          👎 No útil
        </button>
      </div>
    </div>

    <!-- Comments Section -->
    {{#if post.comments}}
    <section class="mt-12">
      <h3 class="text-2xl font-bold mb-6">Respuestas ({{post.comments_count}})</h3>
      
      <div class="space-y-6">
        {{#each post.comments}}
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start gap-3 mb-4">
            {{#if author.avatar_url}}
            <img src="{{author.avatar_url}}" alt="{{author.name}}" class="w-10 h-10 rounded-full">
            {{else}}
            <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
              <span class="text-gray-600 font-semibold">{{author.name.[0]}}</span>
            </div>
            {{/if}}
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h4 class="font-semibold">{{author.name}}</h4>
                <span class="text-sm text-gray-500">{{created_at}}</span>
              </div>
              <div class="prose max-w-none">
                {{{body}}}
              </div>
              <div class="flex items-center gap-4 mt-4 text-sm text-gray-500">
                <span>👍 {{vote_sum}} votos</span>
                {{#if updated_at}}
                <span>Editado {{updated_at}}</span>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </section>
    {{/if}}

    <!-- Comment Form -->
    {{#if current_user}}
    <section class="mt-8">
      <h3 class="text-xl font-semibold mb-4">Añadir una respuesta</h3>
      <form class="bg-white rounded-lg shadow-md p-6">
        <div class="mb-4">
          <label for="comment-body" class="block text-sm font-medium text-gray-700 mb-2">
            Tu respuesta
          </label>
          <textarea 
            id="comment-body" 
            name="comment[body]" 
            rows="6" 
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Escribe tu respuesta aquí..."
            required>
          </textarea>
        </div>
        
        <div class="flex justify-end">
          <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            Publicar Respuesta
          </button>
        </div>
      </form>
    </section>
    {{else}}
    <div class="mt-8 text-center bg-gray-50 rounded-lg p-6">
      <p class="text-gray-600">Inicia sesión para participar en la conversación</p>
    </div>
    {{/if}}

    <!-- Related Posts -->
    {{#if topic.posts}}
    <section class="mt-12">
      <h3 class="text-2xl font-bold mb-6">Otras publicaciones en {{topic.name}}</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {{#each topic.posts}}
        {{#unless (is url ../post.url)}}
        <a href="{{url}}" class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-4 group">
          <h4 class="font-semibold group-hover:text-blue-600 transition-colors mb-2">{{title}}</h4>
          <div class="flex items-center gap-4 text-sm text-gray-500">
            <span>💬 {{comments_count}}</span>
            <span>👍 {{vote_sum}}</span>
          </div>
        </a>
        {{/unless}}
        {{/each}}
      </div>
    </section>
    {{/if}}

  </div>
</main>

{{> footer}}
