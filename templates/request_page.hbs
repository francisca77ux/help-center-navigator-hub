
{{> header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="{{help_center.url}}" class="hover:text-blue-600">Inicio</a></li>
        <li>></li>
        <li><a href="{{help_center.url}}/requests" class="hover:text-blue-600">Mis Solicitudes</a></li>
        <li>></li>
        <li class="text-gray-800 font-medium">Solicitud #{{request.id}}</li>
      </ol>
    </nav>

    <!-- Request Header -->
    <div class="bg-white rounded-lg shadow-md mb-6">
      <div class="p-6 border-b border-gray-200">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-3">
              <span class="text-sm bg-{{request.status}}-100 text-{{request.status}}-800 px-3 py-1 rounded-full font-medium">
                {{#is request.status "new"}}Nueva{{/is}}
                {{#is request.status "open"}}Abierta{{/is}}
                {{#is request.status "pending"}}Pendiente{{/is}}
                {{#is request.status "hold"}}En Espera{{/is}}
                {{#is request.status "solved"}}Resuelta{{/is}}
                {{#is request.status "closed"}}Cerrada{{/is}}
              </span>
              <span class="text-sm bg-{{request.priority}}-100 text-{{request.priority}}-800 px-3 py-1 rounded-full">
                {{#is request.priority "low"}}Baja{{/is}}
                {{#is request.priority "normal"}}Normal{{/is}}
                {{#is request.priority "high"}}Alta{{/is}}
                {{#is request.priority "urgent"}}Urgente{{/is}}
              </span>
            </div>
            
            <h1 class="text-2xl font-bold text-gray-900 mb-2">{{request.subject}}</h1>
            
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
              <span>📅 Creada: {{request.created_at}}</span>
              <span>🔄 Actualizada: {{request.updated_at}}</span>
              {{#if request.assignee.name}}
              <span>👤 Asignado a: {{request.assignee.name}}</span>
              {{/if}}
            </div>
          </div>
          
          <div class="flex gap-2">
            {{#unless request.solved}}
            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" onclick="document.getElementById('reply-form').scrollIntoView({behavior: 'smooth'})">
              Responder
            </button>
            {{/unless}}
            
            {{#if request.solved}}
            <form method="post" action="{{request.url}}/reopen" class="inline">
              <button type="submit" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                Reabrir Solicitud
              </button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <!-- Request Details -->
    <div class="bg-white rounded-lg shadow-md mb-6">
      <div class="p-6">
        <h2 class="text-lg font-semibold mb-4">Detalles de la Solicitud</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <h3 class="font-medium text-gray-700 mb-2">Información del Solicitante</h3>
            <div class="text-sm text-gray-600 space-y-1">
              <p><strong>Nombre:</strong> {{request.requester.name}}</p>
              <p><strong>Email:</strong> {{request.requester.email}}</p>
              {{#if request.custom_fields.phone}}
              <p><strong>Teléfono:</strong> {{request.custom_fields.phone}}</p>
              {{/if}}
              {{#if request.custom_fields.account_number}}
              <p><strong>Cuenta ADT:</strong> {{request.custom_fields.account_number}}</p>
              {{/if}}
            </div>
          </div>
          
          <div>
            <h3 class="font-medium text-gray-700 mb-2">Información Técnica</h3>
            <div class="text-sm text-gray-600 space-y-1">
              <p><strong>ID de Solicitud:</strong> #{{request.id}}</p>
              <p><strong>Tipo:</strong> {{request.custom_fields.type}}</p>
              <p><strong>Prioridad:</strong> 
                {{#is request.priority "low"}}Baja{{/is}}
                {{#is request.priority "normal"}}Normal{{/is}}
                {{#is request.priority "high"}}Alta{{/is}}
                {{#is request.priority "urgent"}}Urgente{{/is}}
              </p>
              <p><strong>Estado:</strong> 
                {{#is request.status "new"}}Nueva{{/is}}
                {{#is request.status "open"}}Abierta{{/is}}
                {{#is request.status "pending"}}Pendiente{{/is}}
                {{#is request.status "hold"}}En Espera{{/is}}
                {{#is request.status "solved"}}Resuelta{{/is}}
                {{#is request.status "closed"}}Cerrada{{/is}}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Comments/Messages -->
    <div class="space-y-4">
      {{#each comments}}
      <div class="bg-white rounded-lg shadow-md">
        <div class="p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-{{#if author.agent}}blue{{else}}gray{{/if}}-100 rounded-full flex items-center justify-center">
              {{#if author.agent}}🎧{{else}}👤{{/if}}
            </div>
            
            <div class="flex-1">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <span class="font-medium text-gray-900">{{author.name}}</span>
                  {{#if author.agent}}
                  <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">Soporte ADT</span>
                  {{/if}}
                </div>
                <span class="text-sm text-gray-500">{{created_at}}</span>
              </div>
              
              <div class="prose prose-sm max-w-none text-gray-700">
                {{{body}}}
              </div>
              
              {{#if attachments}}
              <div class="mt-4">
                <h4 class="text-sm font-medium text-gray-700 mb-2">Archivos Adjuntos:</h4>
                <div class="space-y-2">
                  {{#each attachments}}
                  <a href="{{content_url}}" target="_blank" class="inline-flex items-center gap-2 text-sm text-blue-600 hover:text-blue-800">
                    📎 {{file_name}} ({{size}})
                  </a>
                  {{/each}}
                </div>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <!-- Reply Form -->
    {{#unless request.solved}}
    <div id="reply-form" class="bg-white rounded-lg shadow-md mt-6">
      <form action="{{request.url}}/comments" method="post" enctype="multipart/form-data">
        <div class="p-6 border-b border-gray-200">
          <h3 class="text-lg font-semibold mb-4">Agregar Respuesta</h3>
          
          <div class="mb-4">
            <label for="comment-body" class="block text-sm font-medium text-gray-700 mb-2">
              Tu Respuesta *
            </label>
            <textarea 
              id="comment-body" 
              name="comment[body]" 
              rows="6" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Escribe tu respuesta aquí..."
            ></textarea>
          </div>
          
          <div class="mb-4">
            <label for="comment-attachments" class="block text-sm font-medium text-gray-700 mb-2">
              Archivos Adjuntos (opcional)
            </label>
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center">
              <input 
                type="file" 
                id="comment-attachments" 
                name="comment[attachments][]" 
                multiple
                accept=".jpg,.jpeg,.png,.pdf,.doc,.docx"
                class="hidden"
              >
              <label for="comment-attachments" class="cursor-pointer">
                <div class="text-gray-500 mb-1">📎</div>
                <p class="text-sm text-gray-600">
                  Haz clic para adjuntar archivos
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  JPG, PNG, PDF, DOC (máx. 10MB)
                </p>
              </label>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-gray-50 rounded-b-lg">
          <div class="flex justify-between items-center">
            <div class="text-sm text-gray-600">
              <p>Tu respuesta será enviada por email a nuestro equipo de soporte.</p>
            </div>
            
            <div class="flex gap-3">
              <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                Enviar Respuesta
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
    {{/unless}}

    <!-- Solved Request Message -->
    {{#if request.solved}}
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 mt-6">
      <div class="flex items-center gap-2 mb-2">
        <div class="text-green-600">✅</div>
        <h3 class="font-semibold text-green-900">Solicitud Resuelta</h3>
      </div>
      <p class="text-sm text-green-800 mb-4">
        Esta solicitud ha sido marcada como resuelta. Si necesitas ayuda adicional con este tema, puedes reabrir la solicitud.
      </p>
      
      <div class="flex gap-3">
        <form method="post" action="{{request.url}}/reopen" class="inline">
          <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors text-sm">
            Reabrir Solicitud
          </button>
        </form>
        
        <a href="{{help_center.url}}/requests/new" class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors text-sm">
          Nueva Solicitud
        </a>
      </div>
    </div>
    {{/if}}

    <!-- Quick Actions -->
    <div class="bg-blue-50 rounded-lg p-6 mt-6">
      <h3 class="font-semibold text-blue-900 mb-3">Acciones Rápidas</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
        <a href="{{help_center.url}}/requests" class="text-blue-600 hover:text-blue-800 transition-colors">
          📋 Ver Todas Mis Solicitudes
        </a>
        <a href="{{help_center.url}}/requests/new" class="text-blue-600 hover:text-blue-800 transition-colors">
          ➕ Crear Nueva Solicitud
        </a>
        <a href="{{help_center.url}}" class="text-blue-600 hover:text-blue-800 transition-colors">
          🏠 Ir al Centro de Ayuda
        </a>
      </div>
    </div>

  </div>
</main>

{{> footer}}
