
{{> header}}

<main class="min-h-screen bg-gradient-to-br from-background via-background to-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="{{help_center.url}}" class="hover:text-blue-600">Inicio</a></li>
        <li>></li>
        <li><a href="{{community.url}}" class="hover:text-blue-600">Comunidad</a></li>
        <li>></li>
        <li class="text-gray-800 font-medium">{{topic.name}}</li>
      </ol>
    </nav>

    <!-- Topic Header -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-12 h-12 bg-blue-600 text-white rounded-lg flex items-center justify-center">
          üí¨
        </div>
        <h1 class="text-4xl font-bold">{{topic.name}}</h1>
      </div>
      
      {{#if topic.description}}
      <p class="text-lg text-gray-600 mb-6">{{topic.description}}</p>
      {{/if}}
      
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-6 text-sm text-gray-500">
          <span>{{topic.posts_count}} publicaciones</span>
          {{#if topic.followers_count}}
          <span>{{topic.followers_count}} seguidores</span>
          {{/if}}
        </div>
        
        {{#if current_user}}
        <div class="flex gap-3">
          {{#unless topic.following}}
          <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors">
            Seguir Tema
          </button>
          {{else}}
          <button class="bg-blue-100 text-blue-700 px-4 py-2 rounded-lg hover:bg-blue-200 transition-colors">
            Siguiendo ‚úì
          </button>
          {{/unless}}
          
          <a href="{{topic.url}}/posts/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            Nueva Publicaci√≥n
          </a>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Topic Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-blue-600 mb-2">{{topic.posts_count}}</div>
        <div class="text-gray-600">Publicaciones</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-green-600 mb-2">{{topic.followers_count}}</div>
        <div class="text-gray-600">Seguidores</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <div class="text-2xl font-bold text-purple-600 mb-2">{{topic.comments_count}}</div>
        <div class="text-gray-600">Respuestas</div>
      </div>
    </div>

    <!-- Recent Posts -->
    {{#if posts}}
    <section class="mb-8">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold">Publicaciones Recientes</h2>
        
        <div class="flex items-center gap-2">
          <span class="text-sm text-gray-500">Ordenar por:</span>
          <select class="border border-gray-300 rounded px-3 py-1 text-sm">
            <option value="recent">M√°s recientes</option>
            <option value="popular">M√°s populares</option>
            <option value="most_votes">M√°s votadas</option>
          </select>
        </div>
      </div>
      
      <div class="space-y-6">
        {{#each posts}}
        <article class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              {{#if author.avatar_url}}
              <img src="{{author.avatar_url}}" alt="{{author.name}}" class="w-10 h-10 rounded-full">
              {{else}}
              <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                <span class="text-gray-600 font-semibold">{{author.name.[0]}}</span>
              </div>
              {{/if}}
              <div>
                <h3 class="font-semibold">{{author.name}}</h3>
                <p class="text-sm text-gray-500">{{created_at}}</p>
              </div>
            </div>
            
            {{#if featured}}
            <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">Destacado</span>
            {{/if}}
          </div>
          
          <h3 class="text-xl font-semibold mb-3">
            <a href="{{url}}" class="hover:text-blue-600 transition-colors">{{title}}</a>
          </h3>
          
          {{#if details}}
          <div class="text-gray-600 mb-4 line-clamp-3">
            {{details}}
          </div>
          {{/if}}
          
          <div class="flex items-center justify-between text-sm text-gray-500">
            <div class="flex items-center gap-4">
              <span>üí¨ {{comments_count}} respuestas</span>
              <span>üëç {{vote_sum}} votos</span>
              <span>üëÅÔ∏è {{views}} vistas</span>
            </div>
            
            {{#if updated_at}}
            <span>Actualizado {{updated_at}}</span>
            {{/if}}
          </div>
        </article>
        {{/each}}
      </div>
      
      <!-- Pagination -->
      {{#if has_more_pages}}
      <div class="text-center mt-8">
        <a href="{{next_page_url}}" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
          Ver M√°s Publicaciones
        </a>
      </div>
      {{/if}}
    </section>
    {{else}}
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="text-6xl mb-4">üí¨</div>
      <h2 class="text-2xl font-bold mb-4">No hay publicaciones a√∫n</h2>
      <p class="text-gray-600 mb-8">
        S√© el primero en iniciar una conversaci√≥n en este tema.
      </p>
      
      {{#if current_user}}
      <a href="{{topic.url}}/posts/new" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors inline-block">
        Crear Primera Publicaci√≥n
      </a>
      {{else}}
      <p class="text-gray-500">Inicia sesi√≥n para participar en la comunidad</p>
      {{/if}}
    </div>
    {{/if}}

    <!-- Topic Guidelines -->
    <div class="bg-blue-50 rounded-lg p-6 mt-8">
      <h3 class="font-semibold text-blue-900 mb-3">Normas del Tema</h3>
      <ul class="text-sm text-blue-800 space-y-1">
        <li>‚Ä¢ Mant√©n las publicaciones relacionadas con {{topic.name}}</li>
        <li>‚Ä¢ Busca antes de publicar para evitar duplicados</li>
        <li>‚Ä¢ Proporciona detalles claros sobre tu consulta</li>
        <li>‚Ä¢ Ayuda a otros usuarios con respuestas √∫tiles</li>
      </ul>
    </div>

  </div>
</main>

{{> footer}}
