
{
  "name": "Centro de Ayuda ADT Chile",
  "author": "ADT Chile",
  "version": "1.0.0",
  "api_version": 2,
  "default_locale": "es",
  "settings": [
    {
      "label": "Clave del Widget de Zendesk",
      "variables": [{
        "identifier": "zendesk_widget_key",
        "type": "text",
        "description": "Ingresa tu clave del widget de Zendesk para habilitar el chat"
      }]
    },
    {
      "label": "Color Principal",
      "variables": [{
        "identifier": "primary_color",
        "type": "color",
        "default": "#1e40af"
      }]
    },
    {
      "label": "Configuración de Contacto",
      "variables": [
        {
          "identifier": "show_contact_numbers",
          "type": "checkbox",
          "default": true,
          "label": "Mostrar Números de Contacto"
        },
        {
          "identifier": "main_phone",
          "type": "text",
          "default": "600 123 4567",
          "label": "Teléfono Principal"
        },
        {
          "identifier": "whatsapp_number",
          "type": "text",
          "default": "+56 9 8765 4321",
          "label": "WhatsApp"
        },
        {
          "identifier": "contact_email",
          "type": "text",
          "default": "info@adtchile.cl",
          "label": "Email de Contacto"
        }
      ]
    }
  ]
}
