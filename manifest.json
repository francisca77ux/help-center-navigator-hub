
{
  "name": "Centro de Ayuda ADT Chile",
  "author": "ADT Chile",
  "version": "1.0.0",
  "api_version": 2,
  "default_locale": "es",
  "settings": [
    {
      "name": "zendesk_widget_key",
      "label": "Zendesk Widget Key",
      "variables": [
        {
          "identifier": "zendesk_widget_key"
        }
      ],
      "type": "text",
      "required": false
    },
    {
      "name": "primary_color",
      "label": "Color Primario",
      "variables": [
        {
          "identifier": "primary_color"
        }
      ],
      "type": "text",
      "default": "#1e40af",
      "required": false
    },
    {
      "name": "show_contact_numbers",
      "label": "Mostrar Números de Contacto",
      "variables": [
        {
          "identifier": "show_contact_numbers"
        }
      ],
      "type": "checkbox",
      "default": true,
      "required": false
    },
    {
      "name": "main_phone",
      "label": "Teléfono Principal",
      "variables": [
        {
          "identifier": "main_phone"
        }
      ],
      "type": "text",
      "default": "600 123 4567",
      "required": false
    },
    {
      "name": "whatsapp_number",
      "label": "Número WhatsApp",
      "variables": [
        {
          "identifier": "whatsapp_number"
        }
      ],
      "type": "text",
      "default": "+56 9 8765 4321",
      "required": false
    },
    {
      "name": "contact_email",
      "label": "Email de Contacto",
      "variables": [
        {
          "identifier": "contact_email"
        }
      ],
      "type": "text",
      "default": "info@adtchile.cl",
      "required": false
    }
  ]
}
